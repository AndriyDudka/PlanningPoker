@model PlanningPocker.Services.CardService

@{
    ViewData["Title"] = "Home Page";
}

<div class="grid">
    <div class="grid-row1">

    </div>
    <form class="form-inline grid-row2">
        <div class="form-group">
            <label class="control-label grid-row2-item1">Choose mark</label>
            <select id="mark" class="form-control grid-row2-item2">
                @foreach (var card in Model.card)
            {
                    <option value=@card.CardName>@card.CardName</option>
                }
            </select>
        </div>
        <input id="vote" type="button" value="Vote" class="btn btn-default grid-row2-item3" />
        <input id="reset" type="button" value="Reset" class="btn btn-default grid-row2-item4" />
    </form>
</div>
