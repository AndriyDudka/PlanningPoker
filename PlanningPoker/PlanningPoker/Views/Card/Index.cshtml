@model List<PlanningPoker.Models.Card>
@{
    ViewBag.Title = "Index";
}

<h2>Cards</h2>

<br/>
@Html.ActionLink("Add Card", "Create")

<br/>
<div>
    <table border ="1">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Action</td>
            <td></td>
        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>Voice</td>
                <td>@Html.ActionLink("Delete Card", "Delete", new {id = i.Id})</td>
            </tr>
        }
    </table>
</div>


